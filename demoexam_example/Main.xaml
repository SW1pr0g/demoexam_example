<Window x:Class="demoexam_example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор варианта" Height="350" Width="525"
        FontFamily="Verdana" Closing="Window_Closing"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>           
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <Button Content="Вариант 1" Click="First_Click"/>            
            <Button Content="Вариант 2" Click="Second_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top">
            <Button Content="Вариант 3" Click="Third_Click"/>
            <Button Content="Вариант 4" Click="Fourth_Click"/>
            <Button Content="Вариант 5" Click="Fifth_Click"/>
        </StackPanel>
    </Grid>
</Window>
